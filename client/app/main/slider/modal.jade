div
   div.modal-header
      button(type="button", class="close", data-dismiss="modal" ng-click="cancel()")&times;
       //  h3(ng-repeat="slide in slides", class="modal-title") {{slide.title}}
   div.modal-body
      uib-carousel(interval="myInterval" no-wrap="noWrapSlides")
         uib-slide(ng-repeat="slide in slides" active="slide.active")
            img(ng-src="{{slide.src}}" style="margin:auto;width:100%;height:100% ")
            div.carousel-caption
   div.modal-footer
      button.btn.btn-primary(type="button", ng-click="cancel()") Close